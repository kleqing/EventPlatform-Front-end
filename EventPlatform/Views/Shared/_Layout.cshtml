<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventPlatform</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #e91e63;
            --primary-color-dark: #c2154a;
            --text-color-dark: #2c3e50;
            --text-color-light: #8492a6;
            --border-color: #e4e6eb;
            --white-color: #fff;
            --dark-bg: #222;
        }

        /* General Body Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            color: var(--text-color-dark);
        }

        /* Header Styling */
        header {
            background: var(--white-color);
            padding: 15px 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            header .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

        .logo {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .main-nav {
            display: flex;
            gap: 30px;
            align-items: center;
        }

            .main-nav a {
                text-decoration: none;
                color: var(--text-color-dark);
                font-size: 14px;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .main-nav a:hover {
                    color: var(--primary-color);
                }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
            font-weight: 600;
        }

            .user-info .username {
                color: var(--text-color-dark);
            }

        .btn-sm-custom {
            padding: 8px 15px;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-outline-primary {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
        }

            .btn-outline-primary:hover {
                background: var(--primary-color);
                color: var(--white-color);
            }

        .btn-outline-danger {
            border: 2px solid #dc3545;
            color: #dc3545;
        }

            .btn-outline-danger:hover {
                background: #dc3545;
                color: var(--white-color);
            }

        /* Footer Styling */
        footer {
            background: var(--dark-bg);
            color: #ccc;
            padding: 60px 0 20px;
            margin-top: 50px;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        .footer-section h4 {
            color: var(--white-color);
            margin-bottom: 20px;
            font-size: 16px;
            font-weight: 600;
        }

        .footer-section p {
            font-size: 14px;
            color: var(--text-color-light);
        }

        .footer-section a {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #ccc;
            text-decoration: none;
            font-size: 14px;
            margin-bottom: 12px;
            transition: color 0.3s;
        }

            .footer-section a:hover {
                color: var(--primary-color);
            }

        .footer-section i {
            width: 16px;
        }

        .footer-subscribe {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

            .footer-subscribe input {
                flex: 1;
                padding: 10px;
                border: none;
                border-radius: 4px;
                background: #333;
                color: var(--white-color);
            }

            .footer-subscribe button {
                background: var(--primary-color);
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                cursor: pointer;
                font-weight: bold;
                transition: all 0.3s ease;
            }

                .footer-subscribe button:hover {
                    background: var(--primary-color-dark);
                }

        .footer-bottom {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #444;
            font-size: 14px;
            color: #999;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <a class="logo" asp-page="/Index"><i class="fas fa-fan"></i> Event Platform</a>

            <nav class="main-nav d-none d-lg-flex">
                <a asp-page="/Index">HOME</a>
                <a asp-page="/About">ABOUT</a>
                <a asp-page="/Events">EVENT</a>
                <a asp-page="/Speakers">SPEAKER</a>
                <a asp-page="/Contact">CONTACT US</a>
            </nav>

            <div class="header-actions">
                <div id="auth-container">
                  <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="loginBtn" href="/Auth" class="btn btn-outline-primary btn-sm d-none">Login</a>
                        </li>
                        <li class="nav-item">
                            <button id="logoutBtn" class="btn btn-outline-danger btn-sm d-none">Logout</button>
                        </li>
                    </ul>
              </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="contact">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>Quick Link</h4>
                    <a asp-page="/About">About Us</a>
                    <a asp-page="/Events">Event</a>
                    <a asp-page="/Speakers">Speaker</a>
                    <a asp-page="/Contact">Contact</a>
                </div>

                <div class="footer-section">
                    <h4>SUBSCRIBE OUR NEWSLETTER</h4>
                    <p>Don't miss our latest update get updates</p>
                    <div class="footer-subscribe">
                        <input type="email" placeholder="Enter your email">
                        <button>SUBSCRIBE</button>
                    </div>
                </div>

                <div class="footer-section">
                    <h4>Contact</h4>
                    <a href="tel:+1234567890"><i class="fas fa-phone-alt"></i> +1 (234) 567 - 8900</a>
                    <a href="mailto:contact@yourmail.com"><i class="far fa-envelope"></i> contact@yourmail.com</a>
                    <a href="#"><i class="fas fa-map-marker-alt"></i> 123 St Main Street, New York</a>
                </div>
            </div>

            <div class="footer-bottom">
                &copy; @DateTime.Now.Year - EventPlatform
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        async function checkAuth() {
            const authContainer = document.getElementById('auth-container');
            const cachedUser = localStorage.getItem("user");

            if (cachedUser) {
                const user = JSON.parse(cachedUser);
                authContainer.innerHTML = `
                <div class="user-info">
                    <span class="username d-none d-md-inline">Welcome, ${user.fullName || 'User'}</span>
                    <a href="/Profile" class="btn-sm-custom btn-outline-primary">Profile</a>
                    <button id="logoutBtn" class="btn-sm-custom btn-outline-danger">Logout</button>
                </div>
        `;
                syncUser();
                return;
            }
            await syncUser();
            
            async function syncUser() {
                try {
                    const res = await fetch('https://localhost:7063/api/user/me', {
                        method: 'GET',
                        credentials: 'include'
                    });

                    if (res.ok) {
                        const user = await res.json();
                        const current = JSON.parse(localStorage.getItem("user") || "{}");
                        const merged = { ...current, ...user };
                        localStorage.setItem("user", JSON.stringify(merged));
                        authContainer.innerHTML = `
                        <div class="user-info">
                            <span class="username d-none d-md-inline">Welcome, ${user.fullName || 'User'}</span>
                            <a href="/Profile" class="btn-sm-custom btn-outline-primary">Profile</a>
                            <button id="logoutBtn" class="btn-sm-custom btn-outline-danger">Logout</button>
                        </div>
                `;
                    } else {
                        showLoginBtn();
                    }
                } catch (err) {
                    console.error('Auth check failed:', err);
                    showLoginBtn();
                }
            }

            function showLoginBtn() {
                localStorage.removeItem("user");
                authContainer.innerHTML = '<a href="/Auth" class="btn-sm-custom btn-outline-primary">Login</a>';
            }
        }

        document.addEventListener('DOMContentLoaded', async () => {
            await checkAuth();

            // Gắn event listener cho nút logout (nếu tồn tại)
            document.body.addEventListener('click', async (event) => {
                if (event.target.id === 'logoutBtn') {
                    try {
                        const res = await fetch('https://localhost:7063/api/auth/logout', {
                            method: 'POST',
                            credentials: 'include'
                        });
                        localStorage.removeItem("user");
                        if (res.ok) {
                            alert('Logout success!');
                            window.location.reload();
                        } else {
                            alert('Logout failed.');
                        }
                    } catch (err) {
                        console.error(err);
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>