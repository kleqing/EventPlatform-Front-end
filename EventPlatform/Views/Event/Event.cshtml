<button id="open-search-btn" class="btn-primary">
    <i class="fas fa-search"></i>
</button>

<div id="search-popup" class="search-popup-overlay">
    <div class="search-popup-content">
        <button id="close-popup-btn" class="close-popup-btn">
            <i class="fas fa-times"></i>
        </button>
        <h3>Find Your Event</h3>

        <div class="search-input-group">
            <input type="text" placeholder="Enter event name, keyword, ...">
        </div>

        <div class="filter-group">
            <h4>By Category</h4>
            <div class="filter-tags">
                <button class="category-btn active">All</button>
                <button class="category-btn">Fire Wall</button>
                <button class="category-btn">Sport</button>
                <button class="category-btn">Web Development</button>
                <button class="category-btn">Marketing</button>
                <button class="category-btn">Technology</button>
                <button class="category-btn">Music</button>
                <button class="category-btn">Business</button>
            </div>
        </div>

        <div class="filter-group">
            <h4>By Tag</h4>
            <div class="filter-tags">
                <button class="tag-btn">#Conference</button>
                <button class="tag-btn">#Workshop</button>
                <button class="tag-btn">#Online</button>
                <button class="tag-btn">#Networking</button>
                <button class="tag-btn">#Startup</button>
                <button class="tag-btn">#Free</button>
            </div>
        </div>

        <div class="search-popup-footer">
            <button class="btn-primary" style="width: 100%;">Search Now</button>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchPopup = document.getElementById('search-popup');
        const openBtn = document.getElementById('open-search-btn');
        const closeBtn = document.getElementById('close-popup-btn');

        // Mở popup
        openBtn.addEventListener('click', () => {
            searchPopup.style.display = 'flex';
        });

        // Đóng popup khi nhấn nút 'x'
        closeBtn.addEventListener('click', () => {
            searchPopup.style.display = 'none';
        });

        // Đóng popup khi nhấn vào vùng nền mờ bên ngoài
        searchPopup.addEventListener('click', (event) => {
            if (event.target === searchPopup) {
                searchPopup.style.display = 'none';
            }
        });

        // Xử lý active state cho các nút category và tag bên trong popup
        const filterButtons = document.querySelectorAll('.search-popup-content .category-btn, .search-popup-content .tag-btn');
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Với category, chỉ cho phép chọn 1
                if (button.classList.contains('category-btn')) {
                    // Bỏ active của các nút category khác
                    document.querySelectorAll('.search-popup-content .category-btn').forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active'); // Thêm active cho nút được click
                } else { // Với tag, cho phép chọn nhiều
                     button.classList.toggle('active');
                }
            });
        });
    });
</script>