@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Event Platform - Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="login-container">
        <div class="image-section">
            <img src="https://r2-us-west.photoai.com/1725049228-59e5679be5ad1ee0f05c529c09f2f50d-1.png" alt="Event Platform" />
        </div>

        <div class="form-section">
            <div class="header">
                <div class="brand-name">Event Platform</div>
                
                <div class="tabs">
                    <a href="@Url.Action("Index", "Auth")" class="tab inactive">Log In</a>
                    <div class="tab active">Sign Up</div>
                    <div class="tab-indicator"></div>
                </div>
            </div>

            <form id="registerForm">
                <div id="error-message" class="alert" style="display:none;"></div>

                <div class="form-group">
                    <input type="text" id="username" placeholder="Username" required />
                </div>

                <div class="form-group">
                    <input type="email" id="email" placeholder="Email" required />
                </div>

                <div class="form-group">
                    <input type="password" id="password" placeholder="Password" required />
                </div>

                <div class="form-group">
                    <input type="password" id="confirmPassword" placeholder="Confirm Password" required />
                </div>

                <button type="submit" class="btn-login">Sign Up</button>

                <div class="social-login">
                    <div class="social-title">Or login with</div>
                    <div class="social-buttons">
                        <button type="button" class="social-btn google-btn" title="Login with Google">
                            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" />
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="js/auth.js"></script>
</body>
</html>
