@{
    ViewData["Title"] = "Email Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Event Platform</title>
    <link rel="stylesheet" href="~/css/auth.css" />
    <style>
        .confirmation-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 40px;
            text-align: center;
            max-width: 400px;
            margin: auto;
            margin-top: 80px;
        }

        .confirmation-card h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }

        .success-icon {
            color: #28a745;
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .error-icon {
            color: #dc3545;
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .redirect-text {
            font-size: 0.95rem;
            color: #555;
        }

        .btn-primary {
            display: inline-block;
            margin-top: 20px;
            background: #d9027d;
            color: white;
            padding: 10px 25px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background: #b50066;
        }
    </style>
</head>
<body>
    <div class="confirmation-card">
        @if (ViewBag.Success == true)
        {
            <div class="success-icon"><i class="fas fa-check-circle"></i></div>
            <h2>Email Verified!</h2>
            <p>Your email <strong>@ViewBag.VerifiedEmail</strong> has been successfully verified.</p>
            <p class="redirect-text">Redirecting to login page in <span id="countdown">5</span> seconds...</p>
            <a class="btn-primary" href="@Url.Action("Index", "Auth")">Go to Login</a>
        }
        else
        {
            <div class="error-icon"><i class="fas fa-times-circle"></i></div>
            <h2>Verification Failed</h2>
            <p>The verification link is invalid or expired.</p>
            <a class="btn-primary" href="@Url.Action("Register", "Auth")">Try Again</a>
        }
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        const success = @((ViewBag.Success ?? false).ToString().ToLower()) === "true";
        if (success) {
            let counter = 5;
            const countdownEl = document.getElementById("countdown");
            const interval = setInterval(() => {
                counter--;
                if (countdownEl) countdownEl.textContent = counter;
                if (counter <= 0) {
                    clearInterval(interval);
                    window.location.href = '@Url.Action("Index", "Auth")';
                }
            }, 1000);
        }
    </script>
</body>
</html>
