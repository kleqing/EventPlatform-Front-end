@{
ViewData["Title"] = "Forgot Password";
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Event Platform - Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
<div class="login-container">
    <div class="image-section">
        <img src="https://r2-us-west.photoai.com/1725049228-59e5679be5ad1ee0f05c529c09f2f50d-1.png" alt="Event Platform" />
    </div>

    <div class="form-section">
        <div class="header">
            <div class="brand-name">Event Platform</div>
            <div class="tabs">
                <div class="tab active">Forgot Password</div>
            </div>
        </div>

        <form id="forgotForm">
            <div id="message" class="alert" style="display:none;"></div>

            <div class="form-group">
                <input type="email" id="email" placeholder="Enter your email" required />
            </div>

            <button type="submit" class="btn-login">Send Reset Link</button>

            <div class="link" style="text-align:center; margin-top:20px;">
                <a href="@Url.Action("Index", "Auth")" style="color:#D9027D; text-decoration:none;">Back to Login</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById("forgotForm").addEventListener("submit", async (e) => {
        e.preventDefault();

        const email = document.getElementById("email").value.trim();
        const messageDiv = document.getElementById("message");
        const btn = e.target.querySelector(".btn-login");

        if (!email) {
            messageDiv.textContent = "Please enter your email.";
            messageDiv.style.display = "block";
            messageDiv.style.background = "#fff3cd";
            messageDiv.style.color = "#856404";
            messageDiv.style.border = "1px solid #ffeeba";
            return;
        }

        messageDiv.style.display = "none";
        btn.disabled = true;
        btn.textContent = "Sending...";

        try {
            const res = await fetch(`https://localhost:7063/api/auth/forgot-password?email=${encodeURIComponent(email)}`, {
                method: "POST"
            });

            const result = await res.json();
            messageDiv.style.display = "block";

            if (!res.ok || result.success === false) {
                messageDiv.textContent = result.message || "Failed to send reset link.";
                messageDiv.style.background = "#f8d7da";
                messageDiv.style.color = "#721c24";
                messageDiv.style.border = "1px solid #f5c6cb";
            } else {
                messageDiv.textContent = "✅ Reset link sent successfully! Please check your email.";
                messageDiv.style.background = "#d4edda";
                messageDiv.style.color = "#155724";
                messageDiv.style.border = "1px solid #c3e6cb";
                e.target.reset();
            }

        } catch {
            messageDiv.textContent = "⚠️ Unable to connect to the server.";
            messageDiv.style.display = "block";
            messageDiv.style.background = "#fff3cd";
            messageDiv.style.color = "#856404";
            messageDiv.style.border = "1px solid #ffeeba";
        } finally {
            btn.disabled = false;
            btn.textContent = "Send Reset Link";
        }
    });
</script>
</body>
</html>
