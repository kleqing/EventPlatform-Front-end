@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClothOn - Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<body>
    <div class="login-container">
        <div class="image-section">
            <img src="https://r2-us-west.photoai.com/1725049228-59e5679be5ad1ee0f05c529c09f2f50d-1.png"
                 alt="Event Management" />
        </div>

        <div class="form-section">
            <div class="header">
                <div class="brand-name">Event Platform</div>

                <div class="tabs">
                    <div class="tab active">Log In</div>
                    <a href="@Url.Action("Register", "Auth")" class="tab inactive">Sign Up</a>
                    <div class="tab-indicator"></div>
                </div>
            </div>

            <form id="loginForm">
                <div id="error-message" class="alert" style="display:none;"></div>

                <div class="form-group">
                    <input type="text" name="fullname" id="fullname" placeholder="Full Name" required />
                </div>

                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="Password" required />
                </div>

                <button type="submit" class="btn-login">Log In</button>

                <div class="forgot-password">
                    <a href="@Url.Action("ForgotPassword", "Auth")">Forget Password?</a>
                </div>

                <div class="social-login">
                    <div class="social-title">Or login with</div>
                    <div class="social-buttons">
                        <button type="button" class="social-btn google-btn" title="Login with Google">
                            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" />
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>

<script src="js/auth.js"> </script>

</html>